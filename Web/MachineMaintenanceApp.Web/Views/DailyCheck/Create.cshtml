@using MachineMaintenanceApp.Web.ViewModels.DailyChecks.Create
@using MachineMaintenanceApp.Data.Models.Enums
@model DailyCreateInputViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create daily check</h1>
<hr />
<div class="text-center">
    <div>
        <form asp-controller="DailyCheck" asp-action="Create" method="post"
              enctype="multipart/form-data">

            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Type"></label>
                <select asp-for="Type" class="form-control" asp-items="@Html.GetEnumSelectList<DailyCheckType>()"></select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Notes"></label>
                <input asp-for="Notes" class="form-control" />
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <input type="text" name="machineId" />
            </div>


            <input type="submit" value="Create" class="btn btn-success" />
        </form>

        <br />
    </div>
    <div>
        <a href="/Machine/Details/@Model.MachineId">
            <input type="submit" value="Cancel" class="btn btn-secondary" />
        </a>
    </div>
</div>
