@using MachineMaintenanceApp.Web.ViewModels.PlannedRepairs.PlannedRepairsPage
@using MachineMaintenanceApp.Data.Common.Helpers
@using MachineMaintenanceApp.Data.Models.Enums
@model PagePlannedRepairsViewModel
@{
    ViewData["Title"] = "PlannedRepairsPage";
}

<div class="text-center">
    <h1 class="display-4">Planned Repairs</h1>
</div>
<hr />

<div style="padding: 5%;">
    <table class="table">
        <thead class="thead-light">
            <tr>
                <th scope="col">Type</th>
                <th scope="col">Created On</th>
                <th scope="col">Created By</th>
                <th scope="col">Machine Number</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var repair in Model.PlannedRepairs)
            {
                var myEnum = EnumHelper<RepairType>.GetDisplayValue(repair.Type);
                <tr>
                    <th scope="row">@myEnum</th>
                    <td scope="row"><time datetime="@repair.StartTime.ToString("O")"></time></td>
                    <td scope="row">@repair.UserLastName</td>
                    <td scope="row">@repair.MachineInventoryNumber</td>
                    <td scope="row"><a asp-controller="PlannedRepairs" asp-action="Details" asp-route-id="@repair.Id">Details</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>

<nav>
    <ul class="pagination justify-content-center">
        @if (this.Model.CurrentPage == 1)
        {
            <li class="page-item disabled">
                <a class="page-link" href="#">Previous</a>
            </li>
        }
        else
        {
            <li class="page-item">
                <a class="page-link"
                   asp-controller="PlannedRepairs"
                   asp-action="PlannedRepairsPage"
                   asp-route-id="@this.Model.MachineId"
                   asp-route-page="@(this.Model.CurrentPage - 1)">Previous</a>
            </li>
        }

        @for (int i = 1; i <= this.Model.PagesCount; i++)
        {
            var active = i == this.Model.CurrentPage ? "active" : string.Empty;
            <li class="page-item @active">
                <a class="page-link"
                   asp-controller="PlannedRepairs"
                   asp-action="PlannedRepairsPage"
                   asp-route-id="@this.Model.MachineId"
                   asp-route-page="@i">@i</a>
            </li>
        }

        @if (this.Model.CurrentPage == this.Model.PagesCount)
        {
            <li class="page-item disabled">
                <a class="page-link" href="#">Next</a>
            </li>
        }
        else
        {
            <li class="page-item">
                <a class="page-link"
                   asp-controller="PlannedRepairs"
                   asp-action="PlannedRepairsPage"
                   asp-route-id="@this.Model.MachineId"
                   asp-route-page="@(this.Model.CurrentPage + 1)">Next</a>
            </li>
        }
    </ul>
</nav>

<div class="text-center">

    <a href="/Machine/Details/@Model.MachineId">
        <input type="submit" value="Return" class="btn btn-secondary" />
    </a>

</div>

